<div id="homepage" v-cloak>
  <div class="container">
    <div class="jumbotron mensaje-bienvenida text-center">
      <h1 class="display-4"><%= i18n('Welcome') %></h1>
      <hr class="my-4">
      <p><%= i18n('Application Description') %></p>
    </div>

    <div class="row" v-if="modelo.avisos">
      <template v-for="aviso in modelo.avisos">
        <div class="col-md-5">
          <h3 v-html="aviso.titulo"></h3>
          <p v-html="aviso.mensaje"></p>
        </div>
        <div class="col-md-1"></div>
      </template>
    </div>
  </div>
</div>

<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
